# TradeBot Environment Configuration
# Copy this file to .env and fill in your actual values

# -----------------------------------------
# API KEYS - NEVER COMMIT THESE!
# -----------------------------------------

# NSE/Exchange APIs
NSE_API_KEY=your_nse_api_key_here
NSE_API_SECRET=your_nse_api_secret_here

# Broker APIs
ZERODHA_API_KEY=your_zerodha_api_key_here
ZERODHA_API_SECRET=your_zerodha_secret_here
ZERODHA_ACCESS_TOKEN=your_zerodha_access_token_here

ALICE_BLUE_API_KEY=your_alice_blue_api_key_here
ALICE_BLUE_CLIENT_ID=your_alice_blue_client_id_here

# Data Providers
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
YAHOO_FINANCE_API_KEY=your_yfinance_key_here

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# -----------------------------------------
# EMAIL ALERTS (SMTP)
# -----------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=TradeBot <your_email@gmail.com>
ALERT_EMAILS=alert1@example.com,alert2@example.com

# -----------------------------------------
# DATABASE
# -----------------------------------------
DATABASE_URL=sqlite:///data/tradebot.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/tradebot

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# -----------------------------------------
# TRADING CONFIGURATION
# -----------------------------------------
TOTAL_CAPITAL=100000
MAX_LOSS_PER_TRADE=2000
MAX_DAILY_LOSS=10000
INTRADAY_LEVERAGE=4
SWING_LEVERAGE=2

# -----------------------------------------
# LOGGING
# -----------------------------------------
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/tradebot.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# -----------------------------------------
# ENVIRONMENT
# -----------------------------------------
ENVIRONMENT=development
DEBUG=false
DRY_RUN=true
